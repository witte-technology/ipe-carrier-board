// Verdin iMX8MP overlay to enable DSI displays connected to IpÃª Board.

/dts-v1/;
/plugin/;

/ {
	compatible = "toradex,verdin-imx8mp";
};

#include <dt-bindings/interrupt-controller/arm-gic.h>
#include <dt-bindings/gpio/gpio.h>
#include "display-tdo-ts070wsh02ce_overlay.dtsi"
#include <dt-bindings/../../arch/arm64/boot/dts/freescale/imx8mp-pinfunc.h>

&backlight {
	pwms = <&pwm3 0 6666667 0>;
	status = "okay";
};

&gpu_2d {
	status = "okay";
};

&gpu_3d {
	status = "okay";
};

/* Verdin I2C_2_DSI */
&i2c2 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	bridge@2c {
		compatible = "ti,sn65dsi83";
		reg = <0x2c>;
		/* IRQ not connected */
		/* Verdin GPIO_10_DSI (SODIMM 21) */
		enable-gpios = <&gpio4 28 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_10_dsi>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;

				dsi_riv_in: endpoint {
					data-lanes = <1 2 3 4>;
					remote-endpoint = <&mipi_dsi_bridge2_out>;
				};
			};

			port@2 {
				reg = <2>;

				lvds_out_panel_riv: endpoint {
					remote-endpoint = <&panel_in_lvds_riv>;
				};
			};
		};
	};

    /* Goodix GT911 controller touchscreen */
    goodix_ts: gt911@14 {
        compatible = "goodix,gt911";
        reg = <0x14>;
		/* Verdin DSI_1_INT# (TOUCH_INT#, SODIMM 17) */
		interrupt-parent = <&gpio4>;
		interrupts = <25 IRQ_TYPE_EDGE_FALLING>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_9_dsi>;
    };
};

/* LCDIF to MIPI-DSI */
&lcdif1 {
	status = "okay";
};

&goodix_ts {
    status = "okay";
};

&mipi_dsi {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	port@1 {
		mipi_dsi_bridge2_out: endpoint {
			attach-bridge;
			remote-endpoint = <&dsi_riv_in>;
		};
	};
};

&mix_gpu_ml {
	status = "okay";
};

&ml_vipsi {
	status = "okay";
};